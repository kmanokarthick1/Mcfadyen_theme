<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="copyright" remove="true" />
        <referenceContainer name="footer" remove="true" />
        <referenceBlock name="reviews.tab" remove="false" />
        <move element="navigation.sections" destination="header-wrapper" />
        <referenceContainer name="header-wrapper" >
                <block class="Magento\Framework\View\Element\Template" before="minicart"  name="customer_account_link" template="Magento_Theme::customer_account_link.phtml"/>
        </referenceContainer>
        <referenceBlock name="header.panel.wrapper" remove="true"></referenceBlock>
    </body>
</page>
